{
    "name": "luizcmarin/carolcrm",
    "description": "CarolCRM",
    "license": "GPL-3.0 license",
    "type": "project",
    "keywords": [
        "codeigniter4",
        "crm",
        "rh"
    ],
    "authors": [
        {
            "name": "Luiz Marin",
            "email": "luizcmarin@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/luizcmarin/carolcrm",
    "support": {
        "forum": "https://github.com/luizcmarin/carolcrm/discussions",
        "source": "https://github.com/luizcmarin/carolcrm",
        "issues": "https://github.com/luizcmarin/carolcrm/issues",
        "docs": "https://github.com/luizcmarin/carolcrm/wiki"
    },
    "require": {
        "php": "^8.1",
        "ext-filter": "*",
        "codeigniter4/framework": "^4.0"
    },
    "require-dev": {
        "codeigniter/coding-standard": "^1.8",
        "codeigniter4/devkit": "^1.3",
        "fakerphp/faker": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.75",
        "icanhazstring/composer-unused": "^0.9.3",
        "maglnet/composer-require-checker": "^4.16",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5.16",
        "squizlabs/php_codesniffer": "^3.13",
        "vimeo/psalm": "^6.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}